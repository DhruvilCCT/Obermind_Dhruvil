@model PurchaseOrderSystem.Models.PG_ModifyCRMOrder

<div class="modal fade" id="myItemModal" role="dialog">
    <div class="modal-dialog  modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="myEditRiskIdTitle">Item List</h6>
                <input type="hidden" id="myEditRiskId" />
                <input type="hidden" id="hidEditRiskOwnerId" />
                <input type="hidden" id="hidEditFirstOriginalRowStart" />
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="myModalMessages">
                    <div id="editRowDiv" style="display:block;margin-bottom:5px;">
                        <div class="container-fluid" style="margin-top:10px">
                            <div class="row">
                                <div class="col">
                                    <table id="exampleF" class="table table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ProductName</th>
                                                <th>Price</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.OrderDetail != null && Model.OrderDetail.Count > 0)
                                            {
                                                @foreach (var item in Model.OrderDetail)
                                                {
                                                    <tr>
                                                        <td>@item.ProductName</td>
                                                        <td>
                                                            <input type="text" value="@item.ProductPrice">
                                                        </td>
                                                        <td><button class="form-control btn btn-secondary">Delete</button></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/dataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="@Url.Content("~/lib/dataTables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/lib/dataTables/dataTables.bootstrap4.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}